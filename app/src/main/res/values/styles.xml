<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewMedium" parent="TextViewDefault">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextViewLager" parent="TextViewDefault">
        <item name="android:textSize">@dimen/text_size_larger</item>
    </style>

    <style name="ButtonRed">
        <item name="android:textSize">@dimen/text_size_button_default</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_button_default</item>
        <item name="android:textStyle">bold</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:textSize">@dimen/text_size_button_default</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_button_default</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/black</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/black</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
